    <%# 相手側からのメッセージ %>
    <div class="talk_block other">
      <div class="speech_bubble">
        相手側からのメッセージ
      </div>
    </div>
    <%# /.talk_block other %>
  </div>



</div>  <%# /.flame %>

</div> <%# /.message %>

