<div class="share my-3">
  <div class="shareWrapper">
    <div class="shareTop d-flex">
      <% if @user.icon.attached? %>
        <%= link_to user_path(current_user) do %>
          <%= image_tag current_user.icon, class: "share_img mx-3 me-4", alt: "..." %>
        <% end %>
      <% else %>
        <%= link_to user_path(current_user) do %>
          <img class="share_img mx-3 me-4" src="/assets/icon.png" >
        <% end %>
      <% end %>
      <%= form_with(model: @post) do |f| %>
        <%= f.text_area :post_content, class: "shareInput", placeholder: '投稿したい内容を入力' %>
    </div>
    <hr class="shareHr" />
    <div class="shareButtons">
      <div class="shareOptions">
        <div class="shareOption">
          <i class="fa-regular fa-image"></i>
        </div>
        <div class="shareOption">
          <i class="fa-solid fa-gift"></i>
        </div>
        <div class="shareOption">
          <i class="fa-regular fa-face-smile"></i>
        </div>
      </div>
      <%= f.submit "投稿", class: "shareButton" %>
    </div>
    <% end %>
  </div>
</div>
 <%# share my-3%>

<div class="tab-content">
  <div id="osusume" class="tab-pane active">
    <%# TODO このdivタグをツイート詳細ページに行くように囲む %>
    <% @posts.each do |post| %>
      <div class="post-body d-flex border p-3">
        <% if post.user.icon.attached? %>
          <%= link_to user_path(post.user) do %>
            <%= image_tag post.user.icon, class: "share_img mx-3 me-4", alt: "..." %>
          <% end %>
        <% else %>
          <%= link_to user_path(post.user) do %>
            <img class="home_img mx-3 me-4" src="/assets/icon.png" >
          <% end %>
        <% end %>
        <div>
          <span class="fw-bold fs-3 me-2"><%= post.user.name %></span>
          <span>@<%= post.user.username %></span>
          <%= link_to post_path(post.id), class: "post-link" do %>
            <p><%= post.post_content %></p>
          <% end %>
          <img class="post_img" src="/assets/EC1.jpg" >
          <div class="d-flex justify-content-around home-icon mt-5">
            <div>
              <i class="fa-regular fa-comment"></i>
              <span class="home-icon-span">2</span>
            </div>
            <div>
              <i class="fa-solid fa-repeat"></i>
              <span class="home-icon-span">3</span>
            </div>
            <div>
              <i class="fa-regular fa-heart"></i>
              <span class="home-icon-span">10</span>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
